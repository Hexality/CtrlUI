<Window x:Class="DriverInstaller.WindowMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DriverInstaller"
        mc:Ignorable="d"
        Title="Driver Installer"
        Height="450"
        Width="485"
        Topmost="True"
        WindowStyle="None" 
        WindowState="Normal"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="{DynamicResource ApplicationAccentLightBrush}">

    <Grid Background="#F1F1F1" Margin="2">
        <Grid Margin="5,0,5,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <StackPanel>
                    <TextBlock Style="{StaticResource TextBlockBlackLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Driver Installer"/>
                    <ProgressBar Name="progressbar_Status" Style="{StaticResource ProgressBarAccent}" HorizontalAlignment="Stretch" IsIndeterminate="True"/>

                    <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                        <Button Name="button_Driver_Install" Content="Install required drivers" Style="{StaticResource ButtonAccentBlack}" Click="button_Driver_Install_Click"/>
                        <Button Name="button_Driver_Uninstall" Content="Uninstall the drivers" Style="{StaticResource ButtonAccentBlack}" Click="button_Driver_Uninstall_Click" Margin="10,0,0,0"/>
                        <Button Name="button_Driver_Close" Content="Close" Style="{StaticResource ButtonAccentBlack}" Click="Button_Driver_Close_Click" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <TextBox Grid.Row="1" Name="textbox_Status" Foreground="#888" Style="{StaticResource TextBoxTransparent}"/>
        </Grid>
    </Grid>
</Window>