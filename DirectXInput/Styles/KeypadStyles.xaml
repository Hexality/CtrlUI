<ResourceDictionary
    x:Class="ArnoldVinkCode.Styles.KeypadStyles"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!--Element Sizes-->
    <sys:Double x:Key="KeypadTextSize">25</sys:Double>
    <sys:Double x:Key="KeypadImageSize">75</sys:Double>

    <!--Image Styles-->
    <Style x:Key="KeypadImageLight" TargetType="Image">
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="2" Direction="320" Color="#FFFFFF" Opacity="0.80" BlurRadius="2"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Height" Value="{DynamicResource KeypadImageSize}"/>
        <Setter Property="Width" Value="{DynamicResource KeypadImageSize}"/>
        <Setter Property="Source" Value="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/Keyboard.png"/>
    </Style>
    <Style x:Key="KeypadImageDark" TargetType="Image">
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="2" Direction="320" Color="#000000" Opacity="0.80" BlurRadius="2"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Height" Value="{DynamicResource KeypadImageSize}"/>
        <Setter Property="Width" Value="{DynamicResource KeypadImageSize}"/>
        <Setter Property="Source" Value="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/KeyboardDark.png"/>
    </Style>

    <!--Text Styles-->
    <Style x:Key="KeypadTextDark" TargetType="TextBlock">
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="2" Direction="320" Color="#000000" Opacity="0.80" BlurRadius="2"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Text" Value="?"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="{DynamicResource KeypadTextSize}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="LineHeight" Value="{DynamicResource KeypadTextSize}"/>
        <Setter Property="LineStackingStrategy" Value="BlockLineHeight"/>
        <Setter Property="Foreground" Value="#000000"/>
    </Style>
    <Style x:Key="KeypadTextLight" TargetType="TextBlock">
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="2" Direction="320" Color="#FFFFFF" Opacity="0.80" BlurRadius="2"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Text" Value="?"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="{DynamicResource KeypadTextSize}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="LineHeight" Value="{DynamicResource KeypadTextSize}"/>
        <Setter Property="LineStackingStrategy" Value="BlockLineHeight"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
    </Style>
</ResourceDictionary>