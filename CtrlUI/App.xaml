<Application x:Class="CtrlUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CtrlUI">
    <!--Application Resources-->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/MainColors.xaml"/>
                <ResourceDictionary Source="Styles/ControlTemplates.xaml"/>
                <ResourceDictionary Source="Styles/MainStyles.xaml"/>
                <ResourceDictionary Source="Styles/DataTemplates/DataTemplates.xaml"/>
                <ResourceDictionary Source="Styles/Scrollbar.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>