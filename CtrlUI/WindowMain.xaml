<Window x:Class="CtrlUI.WindowMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CtrlUI"
        xmlns:styles="clr-namespace:ArnoldVinkCode.Styles"
        RenderOptions.BitmapScalingMode="HighQuality"
        mc:Ignorable="d"
        Title="CtrlUI (Beta)"
        Width="1280"
        Height="720"
        MinWidth="1024"
        MinHeight="720"
        Background="#1D1D1D">

    <!-- Grid Application -->
    <Grid Name="grid_App">
        <!-- Grid Main -->
        <Grid Name="grid_Main">
            <Grid.Background>
                <ImageBrush x:Name="grid_Main_img_Background" Stretch="UniformToFill"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top Buttons -->
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Button Name="button_MenuHamburger" Margin="16,10,0,0" Focusable="False" Height="40" Style="{StaticResource ButtonImageTransparentWhiteBorder}" HorizontalAlignment="Left" ToolTipService.ToolTip="Open the main menu">
                    <Image Source="Assets/Icons/Hamburger.png"/>
                </Button>
                <Button Name="button_MenuSearch" Margin="10,10,0,0" Focusable="False" Height="40" Style="{StaticResource ButtonImageTransparentWhiteBorder}" HorizontalAlignment="Left" ToolTipService.ToolTip="Open the search panel">
                    <Image Source="Assets/Icons/Search.png"/>
                </Button>
                <Button Name="button_MenuSorting" Margin="10,10,0,0" Focusable="False" Height="40" Style="{StaticResource ButtonImageTransparentWhiteBorder}" HorizontalAlignment="Left" ToolTipService.ToolTip="Sort by name">
                    <Image Source="Assets/Icons/Sorting.png"/>
                </Button>
                <Button Name="button_MenuRefresh" Margin="10,10,0,0" Focusable="False" Height="40" Style="{StaticResource ButtonImageTransparentWhiteBorder}" HorizontalAlignment="Left" ToolTipService.ToolTip="Refresh applications">
                    <Image Source="Assets/Icons/Refresh.png"/>
                </Button>
            </StackPanel>

            <!-- Application Lists -->
            <ScrollViewer Grid.Row="1" Style="{StaticResource ScrollViewerVertical}">
                <StackPanel Margin="20,10,20,0">
                    <StackPanel Name="sp_Games">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Games"/>
                            <TextBlock Name="tb_Games_Count" Margin="5,0,0,3.5" VerticalAlignment="Bottom" Style="{StaticResource TextBlockGray}"/>
                        </StackPanel>
                        <Rectangle HorizontalAlignment="Stretch" Style="{StaticResource RectangleHorizontalAccent}"/>
                        <ListBox Name="lb_Games" SelectionMode="Single" Margin="0,5,0,0" ItemContainerStyle="{StaticResource ListBoxItemNoPaddingWhite}" ItemTemplate="{StaticResource ListBoxItemApp}" Style="{StaticResource ListBoxHorizontal}"/>
                    </StackPanel>
                    <StackPanel Name="sp_Apps">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Apps &amp; Media"/>
                            <TextBlock Name="tb_Apps_Count" Margin="5,0,0,3.5" VerticalAlignment="Bottom" Style="{StaticResource TextBlockGray}"/>
                        </StackPanel>
                        <Rectangle HorizontalAlignment="Stretch" Style="{StaticResource RectangleHorizontalAccent}" Margin="0,5,0,5"/>
                        <ListBox Name="lb_Apps" SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItemNoPaddingWhite}" ItemTemplate="{StaticResource ListBoxItemApp}" Style="{StaticResource ListBoxHorizontal}"/>
                    </StackPanel>
                    <StackPanel Name="sp_Emulators">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Emulators"/>
                            <TextBlock Name="tb_Emulators_Count" Margin="5,0,0,3.5" VerticalAlignment="Bottom" Style="{StaticResource TextBlockGray}"/>
                        </StackPanel>
                        <Rectangle HorizontalAlignment="Stretch" Style="{StaticResource RectangleHorizontalAccent}"/>
                        <ListBox Name="lb_Emulators" SelectionMode="Single" Margin="0,5,0,0" ItemContainerStyle="{StaticResource ListBoxItemNoPaddingWhite}" ItemTemplate="{StaticResource ListBoxItemApp}" Style="{StaticResource ListBoxHorizontal}"/>
                    </StackPanel>
                    <StackPanel Name="sp_Shortcuts">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Shortcuts"/>
                            <TextBlock Name="tb_Shortcuts_Count" Margin="5,0,0,3.5" VerticalAlignment="Bottom" Style="{StaticResource TextBlockGray}"/>
                        </StackPanel>
                        <Rectangle HorizontalAlignment="Stretch" Style="{StaticResource RectangleHorizontalAccent}"/>
                        <ListBox Name="lb_Shortcuts" SelectionMode="Single" Margin="0,5,0,0" ItemContainerStyle="{StaticResource ListBoxItemNoPaddingWhite}" ItemTemplate="{StaticResource ListBoxItemApp}" Style="{StaticResource ListBoxHorizontal}"/>
                    </StackPanel>
                    <StackPanel Name="sp_Processes">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Processes"/>
                            <TextBlock Name="tb_Processes_Count" Margin="5,0,0,3.5" VerticalAlignment="Bottom" Style="{StaticResource TextBlockGray}"/>
                        </StackPanel>
                        <Rectangle HorizontalAlignment="Stretch" Style="{StaticResource RectangleHorizontalAccent}"/>
                        <ListBox Name="lb_Processes" SelectionMode="Single" Margin="0,5,0,0" ItemContainerStyle="{StaticResource ListBoxItemNoPaddingWhite}" ItemTemplate="{StaticResource ListBoxItemApp}" Style="{StaticResource ListBoxHorizontal}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Controller Help -->
            <styles:ScrollViewerLoopHorizontal x:Name="sp_ControllerHelp" Grid.Row="2" VerticalAlignment="Bottom" Style="{StaticResource ScrollViewerHorizontal}">
                <StackPanel Opacity="0.50" Orientation="Horizontal">
                    <StackPanel.Background>
                        <SolidColorBrush Color="#1D1D1D" Opacity="0.80"/>
                    </StackPanel.Background>

                    <StackPanel Name="sp_ControllerHelpLeft" Orientation="Horizontal" Margin="5,5,10,5" Visibility="Collapsed">
                        <Image Source="Assets/Icons/Buttons/ButtonLeft.png" Height="25" Opacity="0.80"/>
                        <TextBlock Name="txt_ControllerHelpLeft" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Left"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpUp" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="Assets/Icons/Buttons/ButtonUp.png" Height="25" Opacity="0.80"/>
                        <TextBlock Name="txt_ControllerHelpUp" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Up"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpRight" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="Assets/Icons/Buttons/ButtonRight.png" Height="25" Opacity="0.80"/>
                        <TextBlock Name="txt_ControllerHelpRight" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Right"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpDown" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="Assets/Icons/Buttons/ButtonDown.png" Height="25" Opacity="0.80"/>
                        <TextBlock Name="txt_ControllerHelpDown" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Down"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpBack" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="Assets/Icons/Buttons/BackOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock Name="txt_ControllerHelpBack" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Back"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpStart" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="Assets/Icons/Buttons/StartOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock Name="txt_ControllerHelpStart" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Start"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpGuide" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="Assets/Icons/Buttons/GuideOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock Name="txt_ControllerHelpGuide" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Switch app"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpGuideHold" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="Assets/Icons/Buttons/GuideHoldOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Keyboard"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpScreenshot" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="Assets/Icons/Buttons/LbOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="+"/>
                        <Image Source="Assets/Icons/Buttons/BackOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Screenshot"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpLb" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="Assets/Icons/Buttons/LbOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock Name="txt_ControllerHelpLb" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Start"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpAltF4" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="Assets/Icons/Buttons/LbOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="+"/>
                        <Image Source="Assets/Icons/Buttons/StartOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Alt+F4"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpRb" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="Assets/Icons/Buttons/RbOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock Name="txt_ControllerHelpRb" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Start"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpAltTab" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="Assets/Icons/Buttons/RbOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="+"/>
                        <Image Source="Assets/Icons/Buttons/BackOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock Name="tb_ControllerHelpAltTab" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Win+Tab"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpAltEnter" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="Assets/Icons/Buttons/RbOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="+"/>
                        <Image Source="Assets/Icons/Buttons/StartOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Alt+Enter"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpVolume" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="Assets/Icons/Buttons/LtOff.png" Height="25" Opacity="0.80"/>
                        <Image Source="Assets/Icons/Buttons/RtOff.png" Height="25" Margin="5,0,0,0" Opacity="0.80"/>
                        <TextBlock Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Volume"/>
                    </StackPanel>
                </StackPanel>
            </styles:ScrollViewerLoopHorizontal>
        </Grid>

        <!-- Popup - Main Menu -->
        <Grid Name="grid_Popup_MainMenu" Visibility="Collapsed">
            <Grid Margin="200,15,200,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <StackPanel Orientation="Horizontal">
                            <Image Name="img_Menu_Controller0" Opacity="0.30" Width="30" Source="Assets/Icons/Controller-Accent.png"/>
                            <Image Name="img_Menu_Controller1" Opacity="0.30" Width="30" Margin="5,0,0,0" Source="Assets/Icons/Controller.png"/>
                            <Image Name="img_Menu_Controller2" Opacity="0.30" Width="30" Margin="5,0,0,0" Source="Assets/Icons/Controller.png"/>
                            <Image Name="img_Menu_Controller3" Opacity="0.30" Width="30" Margin="5,0,0,0" Source="Assets/Icons/Controller.png"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="25,0,0,0">
                            <Image Name="img_Menu_SteamStatus" Opacity="0.30" Width="30"/>
                            <Image Name="img_Menu_UplayStatus" Opacity="0.30" Width="30" Margin="5,0,0,0"/>
                            <Image Name="img_Menu_OriginStatus" Opacity="0.30" Width="30" Margin="5,0,0,0"/>
                            <Image Name="img_Menu_GoGStatus" Opacity="0.30" Width="30" Margin="5,0,0,0"/>
                            <Image Name="img_Menu_BethesdaStatus" Opacity="0.30" Width="30" Margin="5,0,0,0"/>
                            <Image Name="img_Menu_EpicStatus" Opacity="0.30" Width="30" Margin="5,0,0,0"/>
                            <Image Name="img_Menu_BlizzardStatus" Opacity="0.30" Width="30" Margin="5,0,0,0"/>
                            <Image Name="img_Menu_DirectXInput" Opacity="0.30" Width="30" Margin="5,0,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock HorizontalAlignment="Center" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeTitle}" TextAlignment="Center" TextWrapping="Wrap" Text="Main Menu"/>
                    <Rectangle HorizontalAlignment="Stretch" Style="{StaticResource RectangleHorizontalAccent}" Margin="0,5,0,5"/>
                </StackPanel>

                <ListBox Grid.Row="1" Name="listbox_MainMenu" SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItemPaddingWhiteVertical}" Style="{StaticResource ListBoxVertical}">
                    <StackPanel Name="menuButtonMenu" Orientation="Horizontal">
                        <Image Source="Assets/Icons/Hamburger.png" Width="50"/>
                        <TextBlock Margin="15,0,0,0" Text="Close application main menu" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonSearch" Orientation="Horizontal">
                        <Image Source="Assets/Icons/Search.png" Width="50" HorizontalAlignment="Center"/>
                        <TextBlock Margin="15,0,0,0" Text="Open application search panel" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonWindowsStart" Orientation="Horizontal">
                        <Image Source="Assets/Icons/Windows.png" Width="50" HorizontalAlignment="Center"/>
                        <TextBlock Margin="15,0,0,0" Text="Show Windows start menu" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonSorting" Orientation="Horizontal">
                        <Image Source="Assets/Icons/Sorting.png" Width="50" HorizontalAlignment="Center"/>
                        <TextBlock Name="menuButtonSorting_TextBlock" Margin="15,0,0,0" Text="Sort applications by name" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonFullScreen" Orientation="Horizontal">
                        <Image Source="Assets/Icons/FullScreen.png" Width="50" HorizontalAlignment="Center"/>
                        <TextBlock Margin="15,0,0,0" Text="Switch between screen modes" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonMoveMonitor" Orientation="Horizontal">
                        <Image Source="Assets/Icons/MonitorNext.png" Width="50" HorizontalAlignment="Center"/>
                        <TextBlock Margin="15,0,0,0" Text="Move CtrlUI to the next monitor" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonSwitchMonitor" Orientation="Horizontal">
                        <Image Source="Assets/Icons/MonitorSwitch.png" Width="50" HorizontalAlignment="Center"/>
                        <TextBlock Margin="15,0,0,0" Text="Switch active display monitors" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonMediaControl" Orientation="Horizontal">
                        <Image Source="Assets/Icons/Media.png" Width="50" HorizontalAlignment="Center"/>
                        <TextBlock Margin="15,0,0,0" Text="Control playing media and volume" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonAudioDevice" Orientation="Horizontal">
                        <Image Source="Assets/Icons/VolumeUp.png" Width="50" HorizontalAlignment="Center"/>
                        <TextBlock Margin="15,0,0,0" Text="Switch audio playback device" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonFps" Orientation="Horizontal">
                        <Image Source="Assets/Icons/Fps.png" Width="50" HorizontalAlignment="Center"/>
                        <TextBlock Margin="15,0,0,0" Text="Show or hide the fps overlayer" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonRunExe" Orientation="Horizontal">
                        <Image Source="Assets/Icons/Run.png" Width="50" HorizontalAlignment="Center"/>
                        <TextBlock Margin="15,0,0,0" Text="Launch an executable file from disk" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonAppRun" Orientation="Horizontal">
                        <Image Source="Assets/Icons/RunApp.png" Width="50" HorizontalAlignment="Center"/>
                        <TextBlock Margin="15,0,0,0" Text="Launch a Windows store application" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonAppAdd" Orientation="Horizontal">
                        <Image Source="Assets/Icons/Manage.png" Width="50" HorizontalAlignment="Center"/>
                        <TextBlock Margin="15,0,0,0" Text="Add new application to the list" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonCloseLaunchers" Orientation="Horizontal">
                        <Image Source="Assets/Icons/Closing.png" Width="50" HorizontalAlignment="Center"/>
                        <TextBlock Margin="15,0,0,0" Text="Close other running launchers" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonDisconnect" Orientation="Horizontal">
                        <Image Source="Assets/Icons/Stream.png" Width="50" HorizontalAlignment="Center"/>
                        <TextBlock Margin="15,0,0,0" Text="Disconnect active remote streams" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonShutdown" Orientation="Horizontal">
                        <Image Source="Assets/Icons/Shutdown.png" Width="50" HorizontalAlignment="Center"/>
                        <TextBlock Margin="15,0,0,0" Text="Close CtrlUI or shutdown the PC" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonSettings" Orientation="Horizontal">
                        <Image Source="Assets/Icons/Settings.png" Width="50" HorizontalAlignment="Center"/>
                        <TextBlock Margin="15,0,0,0" Text="Open application settings" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonHelp" Orientation="Horizontal">
                        <Image Source="Assets/Icons/Help.png" Width="50" HorizontalAlignment="Center"/>
                        <TextBlock Margin="15,0,0,0" Text="Show application help" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>
                </ListBox>
            </Grid>

            <!-- Shortcuts -->
            <StackPanel Margin="0,55,20,0" HorizontalAlignment="Right">
                <Button Name="grid_Popup_MainMenu_button_Close" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Close the popup">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Assets/Icons/Buttons/ButtonRight.png" Height="30" Width="30" Margin="0,0,5,0"/>
                        <Image Source="Assets/Icons/Close.png" Height="35" Width="35" Margin="0,0,-5,0" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Popup - Search -->
        <Grid Name="grid_Popup_Search" Visibility="Collapsed">
            <Grid Margin="200,40,200,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"> 
                        <Run Text="Search for an app" Style="{StaticResource RunWhiteLight}" FontSize="{DynamicResource TextSizeTitle}"/> 
                        <Run Name="grid_Popup_Search_Count_TextBlock" Style="{StaticResource RunGrayLight}" FontSize="{DynamicResource TextSizeSubTitle}"/>
                    </TextBlock>

                    <Grid>
                        <TextBox Name="grid_Popup_Search_textbox" VerticalContentAlignment="Center" Margin="0,0,65,0" FontSize="{DynamicResource TextSizeMedium}" Style="{StaticResource TextBoxTransparent}" Text="Search application..." styles:TextboxPlaceholder.Placeholder="Search application..."/>
                        <Button Name="grid_Popup_Search_button_Reset" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Reset the search panel">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Assets/Icons/Buttons/ButtonLeft.png" Height="22" Width="22" Margin="0,0,5,0"/>
                                <Image Source="Assets/Icons/TextClear.png" Height="25" Width="25"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <Rectangle HorizontalAlignment="Stretch" Style="{StaticResource RectangleHorizontalAccent}" Margin="0,5,0,5"/>
                    <TextBlock Name="grid_Popup_Search_textblock_Result" Style="{StaticResource TextBlockGrayLight}" FontSize="{DynamicResource TextSizeHuge}" HorizontalAlignment="Center"/>
                </StackPanel>

                <ListBox Grid.Row="1" Name="lb_Search" Focusable="False" SelectionMode="Single" Margin="0,5,0,0" ItemContainerStyle="{StaticResource ListBoxItemNoPaddingWhite}" ItemTemplate="{StaticResource ListBoxItemApp}" Style="{StaticResource ListBoxWrapPanel}"/>
            </Grid>

            <!-- Shortcuts -->
            <StackPanel Margin="0,55,20,0" HorizontalAlignment="Right">
                <Button Name="grid_Popup_Search_button_Close" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Close the popup">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Assets/Icons/Buttons/ButtonRight.png" Height="30" Width="30" Margin="0,0,5,0"/>
                        <Image Source="Assets/Icons/Close.png" Height="35" Width="35" Margin="0,0,-5,0" />
                    </StackPanel>
                </Button>
                <Button Name="grid_Popup_Search_button_KeyboardControllerIcon" Margin="0,10,0,0" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Open or close the keyboard">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Assets/Icons/Buttons/GuideHoldOff.png" Height="30" Opacity="0.80" Margin="0,0,10,0"/>
                        <Image Source="Assets/Icons/Keyboard.png" Height="35" Width="35" Margin="0,0,-2,0" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Popup - Welcome -->
        <Grid Name="grid_Popup_Welcome" Visibility="Collapsed">
            <Grid Margin="200,40,200,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock HorizontalAlignment="Center" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeSubTitle}" TextAlignment="Center" TextWrapping="Wrap" Text="Welcome to Controller User Interface"/>
                    <Rectangle HorizontalAlignment="Stretch" Style="{StaticResource RectangleHorizontalAccent}" Margin="0,5,0,5"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" Style="{StaticResource ScrollViewerVertical}">
                    <StackPanel>
                        <TextBlock HorizontalAlignment="Center" Style="{StaticResource TextBlockWhite}" FontSize="{StaticResource TextSizeLarge}" TextAlignment="Center" TextWrapping="Wrap" Text="Now it's time to quickly setup some basics to get you going along with the application."/>
                        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" Style="{StaticResource TextBlockWhite}" FontSize="{StaticResource TextSizeLarge}" TextAlignment="Center" TextWrapping="Wrap" Text="Connect your controller and set it up in DirectXInput and then you will able to use it in this application."/>
                        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" Style="{StaticResource TextBlockWhite}" FontSize="{StaticResource TextSizeLarge}" TextAlignment="Center" TextWrapping="Wrap" Text="Once you have a controller connected through DirectXInput you can always access CtrlUI by pressing on the 'Guide' button."/>
