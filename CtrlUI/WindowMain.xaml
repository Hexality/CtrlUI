                        <TextBlock Text="CtrlUI sockets client and server ports:" Style="{StaticResource TextBlockWhite}" FontSize="{DynamicResource TextSizeLarge}"/>
                        <TextBlock Text="The sockets are used to receive information from DirectXInput." TextWrapping="Wrap" Style="{StaticResource TextBlockGray}" FontSize="{DynamicResource TextSizeMedium}"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Name="txt_SettingsSocketClientPortStart" Style="{StaticResource TextBoxBlack}" Width="120" HorizontalAlignment="Left"/>
                            <TextBox Name="txt_SettingsSocketClientPortRange" IsEnabled="False" Style="{StaticResource TextBoxBlack}" Width="120" Margin="5,0,0,0" HorizontalAlignment="Left"/>
                        </StackPanel>

                        <Button Name="btn_Settings_AppQuickLaunch" Margin="0,20,0,0" Content="Change quick launch app: Quick Launch" Style="{StaticResource ButtonAccentWhite}" FontSize="{DynamicResource TextSizeMedium}"/>
                        <Button Visibility="Collapsed" Name="btn_Settings_AddSteamLibrary" Margin="0,10,0,0" Content="Add CtrlUI to Steam Library" Style="{StaticResource ButtonAccentWhite}" FontSize="{DynamicResource TextSizeMedium}"/>
                        <Button Name="btn_Settings_AddGeforceExperience" Margin="0,10,0,0" Content="Add CtrlUI to GeForce Experience" Style="{StaticResource ButtonAccentWhite}" FontSize="{DynamicResource TextSizeMedium}"/>
                        <Button Name="btn_Settings_ChangeBackground" Margin="0,10,0,0" Content="Change the background image" Style="{StaticResource ButtonAccentWhite}" FontSize="{DynamicResource TextSizeMedium}"/>
                        <Button Name="btn_Settings_LaunchDirectXInput" Margin="0,10,0,0" Content="Launch DirectXInput application" Style="{StaticResource ButtonAccentWhite}" FontSize="{DynamicResource TextSizeMedium}"/>
                        <Button Name="btn_Settings_CheckControllers" Margin="0,10,0,0" Content="Manage Windows controllers" Style="{StaticResource ButtonAccentWhite}" FontSize="{DynamicResource TextSizeMedium}"/>
                        <Button Name="btn_Settings_CheckForUpdate" Margin="0,10,0,10" Content="Check for application update" Style="{StaticResource ButtonAccentWhite}" FontSize="{DynamicResource TextSizeMedium}"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <!-- Shortcuts -->
            <StackPanel Margin="0,55,20,0" HorizontalAlignment="Right">
                <Button Name="grid_Popup_Settings_button_Close" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Close the popup">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Assets/Icons/Buttons/ButtonRight.png" Height="30" Width="30" Margin="0,0,5,0"/>
                        <Image Source="Assets/Icons/Close.png" Height="35" Width="35" Margin="0,0,-5,0" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Popup - Help -->
        <Grid Name="grid_Popup_Help" Visibility="Collapsed">
            <Grid Margin="200,40,200,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock HorizontalAlignment="Center" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeTitle}" TextAlignment="Center" TextWrapping="Wrap" Text="Help"/>
                    <Rectangle HorizontalAlignment="Stretch" Style="{StaticResource RectangleHorizontalAccent}" Margin="0,5,0,5"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" Style="{StaticResource ScrollViewerVertical}">
                    <StackPanel>
                        <Button Name="btn_Help_Focus" Height="0" Width="0"/>
                        <StackPanel Name="sp_Help"/>
                        <Button Name="btn_Help_ProjectWebsite" Margin="0,35,0,0" Content="Visit Project Website" Style="{StaticResource ButtonAccentWhite}" FontSize="{DynamicResource TextSizeMedium}"/>
                        <Button Name="btn_Help_OpenDonation" Margin="0,10,0,0" Content="Open Donation Page" Style="{StaticResource ButtonAccentWhite}" FontSize="{DynamicResource TextSizeMedium}"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <!-- Shortcuts -->
            <StackPanel Margin="0,55,20,0" HorizontalAlignment="Right">
                <Button Name="grid_Popup_Help_button_Close" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Close the popup">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Assets/Icons/Buttons/ButtonRight.png" Height="30" Width="30" Margin="0,0,5,0"/>
                        <Image Source="Assets/Icons/Close.png" Height="35" Width="35" Margin="0,0,-5,0" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Popup - Color Picker -->
        <Grid Name="grid_Popup_ColorPicker" Visibility="Collapsed">
            <Grid Margin="200,40,200,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Name="grid_Popup_ColorPicker_txt_Title" HorizontalAlignment="Center" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeTitle}" TextAlignment="Center" TextWrapping="Wrap" Text="Accent Color"/>
                    <Rectangle HorizontalAlignment="Stretch" Style="{StaticResource RectangleHorizontalAccent}" Margin="0,5,0,5"/>
                    <TextBlock Name="grid_Popup_ColorPicker_txt_Description" HorizontalAlignment="Center" Style="{StaticResource TextBlockGray}" FontSize="{DynamicResource TextSizeHuge}" TextAlignment="Center" TextWrapping="Wrap" Text="Please select a new accent color:"/>
                </StackPanel>

                <ListBox Grid.Row="1" Name="lb_ColorPicker" SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItemNoPaddingWhite}" ItemTemplate="{StaticResource ListboxItemColor}" Style="{StaticResource ListBoxWrapPanel}"/>
            </Grid>

            <!-- Shortcuts -->
            <StackPanel Margin="0,55,20,0" HorizontalAlignment="Right">
                <Button Name="grid_Popup_ColorPicker_button_ControllerRight" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Close the popup">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Assets/Icons/Buttons/ButtonRight.png" Height="30" Width="30" Margin="0,0,5,0"/>
                        <Image Source="Assets/Icons/Close.png" Height="35" Width="35" Margin="0,0,-5,0" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Popup - File Picker -->
        <Grid Name="grid_Popup_FilePicker" Visibility="Collapsed">
            <Grid Margin="200,40,200,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Name="grid_Popup_FilePicker_txt_Title" HorizontalAlignment="Center" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeTitle}" TextAlignment="Center" TextWrapping="Wrap" Text="File Browser"/>
                    <Rectangle HorizontalAlignment="Stretch" Style="{StaticResource RectangleHorizontalAccent}" Margin="0,5,0,5"/>
                    <TextBlock Name="grid_Popup_FilePicker_txt_Description" HorizontalAlignment="Center" Style="{StaticResource TextBlockGray}" FontSize="{DynamicResource TextSizeHuge}" TextAlignment="Center" TextWrapping="Wrap" Text="Description"/>
                </StackPanel>

                <Grid Name="grid_Popup_Filepicker_Row1" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ListBox Grid.Row="0" Name="lb_FilePicker" SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItemNoPaddingWhite}" ItemTemplate="{StaticResource ListBoxItemString}" Style="{StaticResource ListBoxVertical}"/>
                        <Button Grid.Row="1" Margin="0,10,0,10" Name="grid_Popup_FilePicker_button_SelectFolder" Content="Select the currently opened folder" Style="{StaticResource ButtonAccentWhite}" FontSize="{DynamicResource TextSizeMedium}"/>
                    </Grid>

                    <styles:ScrollViewerLoopVertical ScrollLoopStep="2" Grid.Column="1" Style="{StaticResource ScrollViewerVertical}" Width="320" x:Name="grid_Popup_FilePicker_stackpanel_Description" Visibility="Collapsed">
                        <StackPanel Margin="5,0,5,0">
                            <Image Width="310" MaxHeight="215" Name="grid_Popup_FilePicker_image_Description" HorizontalAlignment="Left"/>
                            <TextBlock Margin="0,5,0,0" Name="grid_Popup_FilePicker_textblock_Description" TextWrapping="Wrap" Style="{StaticResource TextBlockWhite}" FontSize="{StaticResource TextSizeMedium}"/>
                        </StackPanel>
                    </styles:ScrollViewerLoopVertical>
                </Grid>
            </Grid>

            <!-- Shortcuts -->
            <StackPanel Margin="0,55,20,0" HorizontalAlignment="Right">
                <Button Name="grid_Popup_FilePicker_button_ControllerRight" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Close the popup">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Assets/Icons/Buttons/ButtonRight.png" Height="30" Width="30" Margin="0,0,5,0"/>
                        <Image Source="Assets/Icons/Close.png" Height="35" Width="35" Margin="0,0,-5,0" />
                    </StackPanel>
                </Button>
                <Button Name="grid_Popup_FilePicker_button_ControllerUp" Margin="0,10,0,0" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Go a folder up" Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Assets/Icons/Buttons/ButtonUp.png" Height="30" Width="30" Margin="0,0,5,0"/>
                        <Image Source="Assets/Icons/Up.png" Height="35" Width="35" Margin="0,0,-5,0" />
                    </StackPanel>
                </Button>
                <Button Name="grid_Popup_FilePicker_button_ControllerLeft" Margin="0,10,0,0" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Sort the files and folders" Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Assets/Icons/Buttons/ButtonLeft.png" Height="30" Width="30" Margin="0,0,5,0"/>
                        <Image Source="Assets/Icons/Sorting.png" Height="35" Width="35" Margin="0,0,-5,0" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Popup - MessageBox -->
        <Grid Name="grid_Popup_MessageBox" Visibility="Collapsed">
            <Grid Margin="200,40,200,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="0.80*"/>
                    <RowDefinition Height="0.20*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Name="grid_MessageBox_Question" HorizontalAlignment="Center" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeSubTitle}" TextAlignment="Center" TextWrapping="Wrap" Text="Question"/>
                    <Rectangle HorizontalAlignment="Stretch" Style="{StaticResource RectangleHorizontalAccent}" Margin="0,5,0,5"/>
                    <TextBlock Name="grid_MessageBox_Description" HorizontalAlignment="Center" Style="{StaticResource TextBlockGray}" FontSize="{DynamicResource TextSizeHuge}" TextAlignment="Center" TextWrapping="Wrap" Text="Description"/>
                </StackPanel>

                <ListBox Grid.Row="1" Name="lb_MessageBox" VerticalAlignment="Top" SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItemNoPaddingWhite}" ItemTemplate="{StaticResource ListBoxItemString}" Style="{StaticResource ListBoxVertical}"/>
                <TextBlock Grid.Row="2" Name="grid_MessageBox_Subtitle" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,10" Style="{StaticResource TextBlockGray}" FontSize="{DynamicResource TextSizeMedium}" TextAlignment="Center" TextWrapping="Wrap" Text="Subtitle"/>
            </Grid>

            <!-- Shortcuts -->
            <StackPanel Margin="0,55,20,0" HorizontalAlignment="Right">
                <Button Name="grid_Popup_MessageBox_button_Close" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Close the popup">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Assets/Icons/Buttons/ButtonRight.png" Height="30" Width="30" Margin="0,0,5,0"/>
                        <Image Source="Assets/Icons/Close.png" Height="35" Width="35" Margin="0,0,-5,0" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Popup - Text Input -->
        <Grid Name="grid_Popup_TextInput" Visibility="Collapsed">
            <Grid Margin="200,40,200,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Name="grid_Popup_TextInput_textblock_Title" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" Text="Text Input" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeTitle}"/>

                    <Grid>
                        <TextBox Name="grid_Popup_TextInput_textbox" VerticalContentAlignment="Center" Margin="0,0,65,0" FontSize="{DynamicResource TextSizeMedium}" Style="{StaticResource TextBoxTransparent}" Text="Enter text..." styles:TextboxPlaceholder.Placeholder="Enter text..."/>
                        <Button Name="grid_Popup_TextInput_button_Reset" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Reset the text input">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Assets/Icons/Buttons/ButtonLeft.png" Height="22" Width="22" Margin="0,0,5,0"/>
                                <Image Source="Assets/Icons/TextClear.png" Height="25" Width="25"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <Rectangle HorizontalAlignment="Stretch" Style="{StaticResource RectangleHorizontalAccent}" Margin="0,5,0,5"/>
                    <Button Name="grid_Popup_TextInput_button_ConfirmText" Style="{StaticResource ButtonAccentWhite}" HorizontalAlignment="Center" Margin="0,10,0,10" Content="Return and use the entered text"/>
                </StackPanel>
            </Grid>

            <!-- Shortcuts -->
            <StackPanel Margin="0,55,20,0" HorizontalAlignment="Right">
                <Button Name="grid_Popup_TextInput_button_Close" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Close the popup">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Assets/Icons/Buttons/ButtonRight.png" Height="30" Width="30" Margin="0,0,5,0"/>
                        <Image Source="Assets/Icons/Close.png" Height="35" Width="35" Margin="0,0,-5,0" />
                    </StackPanel>
                </Button>
                <Button Name="grid_Popup_TextInput_button_KeyboardControllerIcon" Margin="0,10,0,0" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Open or close the keyboard">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Assets/Icons/Buttons/GuideHoldOff.png" Height="30" Opacity="0.80" Margin="0,0,10,0"/>
                        <Image Source="Assets/Icons/Keyboard.png" Height="35" Width="35" Margin="0,0,-2,0" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Status - Window Active -->
        <Grid Name="grid_WindowActive" Background="#1D1D1D" Opacity="0" IsHitTestVisible="False">
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource TextBlockWhiteLight}" FontSize="45" TextAlignment="Center" TextWrapping="Wrap" Text="Application window is not activated."/>
        </Grid>

        <!-- Status - Clock and Battery -->
        <Grid MinHeight="40" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,10,20,0">
            <TextBlock Name="txt_Main_Date" VerticalAlignment="Center" FontSize="{DynamicResource TextSizeHuge}" Style="{StaticResource TextBlockGrayLight}"/>
        </Grid>
        <Grid MinHeight="40" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="20,10,20,0">
            <StackPanel Orientation="Horizontal">
                <Image Name="img_Main_Battery" Visibility="Collapsed" VerticalAlignment="Center" Margin="0,0,5,0" Source="Assets/Icons/Battery/BatteryVerDis100.png" Height="36"/>
                <TextBlock Name="txt_Main_Battery" Visibility="Collapsed" Margin="0,0,5,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" Text="0%"/>

                <Image Name="img_Main_Time" Visibility="Collapsed" VerticalAlignment="Center" Margin="0,0,5,0" Source="Assets/Clock/1200.png" Height="40"/>
                <TextBlock Name="txt_Main_Time" VerticalAlignment="Center" FontSize="{DynamicResource TextSizeHuge}" Style="{StaticResource TextBlockWhiteLight}"/>
            </StackPanel>
        </Grid>

        <!-- Status - Message Status -->
        <Grid Name="grid_Message_Status" MinHeight="60" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,55,20,0" Visibility="Collapsed">
            <Grid.Background>
                <SolidColorBrush Color="#1D1D1D" Opacity="0.90"/>
            </Grid.Background>

            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="15,10,10,10" Orientation="Horizontal">
                    <Image Name="grid_Message_Status_Image" Source="Assets/Icons/Controller.png" Height="40" Margin="0,0,15,0"/>
                    <TextBlock Name="grid_Message_Status_Text" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Changed" Margin="0,0,15,0"/>
                </StackPanel>
                <Rectangle Fill="{DynamicResource ApplicationAccentLightBrush}" Width="4"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>