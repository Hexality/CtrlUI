<ResourceDictionary
    x:Class="ArnoldVinkCode.Styles.DataTemplates"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:styles="clr-namespace:ArnoldVinkCode.Styles">

    <!-- ListboxItemApp -->
    <DataTemplate x:Key="ListBoxItemApp">
        <StackPanel Width="110" MinHeight="115" Margin="3,0,3,0">
            <Image Source="{Binding ImageBitmap}" Height="90" MaxWidth="70"/>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,-8,0,-5">
                <Ellipse VerticalAlignment="Center" Fill="{DynamicResource ApplicationAccentLightBrush}" Height="8" Width="8" Opacity="0.80" Visibility="{Binding StatusRunning}"/>
                <Ellipse VerticalAlignment="Center" Fill="#FFB900" Height="8" Width="8" Opacity="0.80" Visibility="{Binding StatusSuspended}"/>
                <Path VerticalAlignment="Center" Margin="3,0,0,0" Data="M0,0 L1,1 M0,1 L1,0" Stretch="Fill" Stroke="#CD192A" StrokeThickness="3" Width="10" Height="10" Opacity="0.80" Visibility="{Binding StatusAvailable}"/>
                <Image VerticalAlignment="Center" Margin="3,0,0,0" Source="/Assets/Icons/StatusStore.png" Height="8" Width="8" Opacity="0.80" Visibility="{Binding StatusStore}"/>
                <Polygon VerticalAlignment="Center" Margin="3,0,0,0" Fill="#1DBB55" Points="0,0 8,4, 0,8" Opacity="0.80" Visibility="{Binding StatusLauncher}"/>
                <TextBlock VerticalAlignment="Center" Margin="3,0,0,0" Text="{Binding ProcessRunningCount}" FontSize="{DynamicResource TextSizeTiny}" FontWeight="SemiBold" Style="{StaticResource TextBlockWhite}"/>
            </StackPanel>
            <styles:ScrollViewerLoopHorizontal ScrollViewer.HorizontalScrollBarVisibility="Hidden" IsHitTestVisible="False" Style="{StaticResource ScrollViewerHorizontal}">
                <TextBlock Text="{Binding Name}" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center"/>
            </styles:ScrollViewerLoopHorizontal>
        </StackPanel>
    </DataTemplate>

    <!-- ListboxItemString -->
    <DataTemplate x:Key="ListBoxItemString">
        <StackPanel Margin="5" Orientation="Horizontal">
            <Image Source="{Binding ImageBitmap}" MaxHeight="50" MaxWidth="50"/>
            <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Margin="10,0,0,0" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}"/>
            <TextBlock Text="{Binding NameSub}" VerticalAlignment="Center" Margin="5,0,0,0" Style="{StaticResource TextBlockGrayLight}" FontSize="{DynamicResource TextSizeHuge}"/>
        </StackPanel>
    </DataTemplate>

    <!-- ListboxItemColor -->
    <DataTemplate x:Key="ListboxItemColor">
        <Rectangle Fill="{Binding}" Width="70" Height="70"/>
    </DataTemplate>

    <!-- ListBoxItemRom -->
    <DataTemplate x:Key="ListBoxItemRom">
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Source="{Binding ImageBitmap}" Width="170" Height="115"/>
            <styles:ScrollViewerLoopVertical Grid.Row="1" Width="170" Height="55" ScrollViewer.VerticalScrollBarVisibility="Hidden" IsHitTestVisible="False" Style="{StaticResource ScrollViewerVertical}">
                <TextBlock TextAlignment="Center" TextWrapping="Wrap">
                    <Run Text="{Binding Name}" Style="{StaticResource RunWhite}" FontSize="{StaticResource TextSizeMedium}"/>
                    <Run Text="{Binding NameSub}" Style="{StaticResource RunGray}" FontSize="{StaticResource TextSizeMedium}"/>
                </TextBlock>
            </styles:ScrollViewerLoopVertical>
        </Grid>
    </DataTemplate>
</ResourceDictionary>